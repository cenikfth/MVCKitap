@model List<KitapTuru> 
@if (TempData["basarili"] != null)
{
    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <h4 class="alert-heading">Uyarı!</h4>
        <p class="mb-0">@TempData["basarili"] </p>
    </div>
  
}
 <div class="container">
         <div class="row pt-3 pb-4">
            <h1>Kitap Türleri</h1>
        </div>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Kitap Türü</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var kitapTuru in Model)
        {
            <tr>
                <td>@kitapTuru.Id</td>
                <td>@kitapTuru.Ad</td>
                <td>
                        <a asp-controller="KitapTuru" asp-action="Guncelle" asp-route-id="@kitapTuru.Id" class="btn btn-success">Güncelle</a>
                 </td>
                 <td>
                        <a asp-controller="KitapTuru" asp-action="Sil" asp-route-id="@kitapTuru.Id" class="btn btn-danger">Sil</a>
                 </td>
            </tr> 
        }
   
    </tbody>
</table>
<div class="row pt-3 pb-2">
    <div>
        <a asp-controller="KitapTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button"> Yeni Kitap Türü Oluştur</a>
    </div>
</div>
</div>