@model List<Kiralama> 
@if (TempData["basarili"] != null)
{
    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <h4 class="alert-heading">Uyarı!</h4>
        <p class="mb-0">@TempData["basarili"] </p>
    </div>
  
}
 <div class="container">
         <div class="row pt-3 pb-4">
            <h1>Kiralamalar</h1>
        </div>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Öğrenci Id</th>
        <th>Kitap</th>
      
       
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var kiralama in Model)
        {
            <tr>
                    <td>@kiralama.Id</td>
                    <td>@kiralama.OgrenciId</td>
                    <td>@kiralama.Kitap.KitapAdi</td>
               
                <td>
                        <a asp-controller="Kiralama" asp-action="EkleGuncelle" asp-route-id="@kiralama.Id" class="btn btn-success">Güncelle</a>
                 </td>
                 <td>
                        <a asp-controller="Kiralama" asp-action="Sil" asp-route-id="@kiralama.Id" class="btn btn-danger">Sil</a>
                 </td>
            </tr> 
        }
   
    </tbody>
</table>
<div class="row pt-3 pb-2">
    <div>
        <a asp-controller="Kiralama" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button"> Yeni Kiralama Oluştur</a>
    </div>
</div>
</div>